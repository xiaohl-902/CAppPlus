<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:top="1dp">

        <shape>
            <!-- 填充的颜色 -->
            <solid android:color="@color/colorPrimary" />

            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="5dp"/>

        </shape>
    </item>

</layer-list>
